<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:DataBinding.Colección.Models"
             x:Class="DataBinding.Colección.Views.MainPage"
             Title="MainPage"
             BackgroundColor="LightGray">

    <Grid RowDefinitions="Auto,*,Auto" 
          Padding="16" RowSpacing="4">
        <Grid ColumnDefinitions="*,Auto,Auto" ColumnSpacing="4">
            <Label TextColor="Black" Text="Origenes del paquete:" />
            <Button TextColor="Green"  Text="+" Grid.Column="1" Clicked="OnAgregarButtonClicked" ></Button>
            <Button TextColor="Red"  Text="X" Grid.Column="2" Clicked="OnDeleteButtonClicked" ></Button>
        </Grid>
        <CollectionView 
        SelectionMode="Single"
        EmptyView="Aun no se registran origenes de paquetes"
        x:Name="OrigenesListView"
        Grid.Row="1"
        BackgroundColor="LightGreen"
            SelectionChanged="OrigenesListView_SelectionChanged"
            >
            <CollectionView.ItemTemplate>
                
                <DataTemplate x:DataType="{x:Type models:OrigenDePaquete}">
                    <Border Stroke="Blue" Padding="8" >
                        <Grid RowDefinitions="Auto,*" ColumnDefinitions="Auto,Auto" >
                            <CheckBox Grid.RowSpan="2" IsChecked="False"></CheckBox>
                        <Label Grid.Column="1" Text="Empty" ></Label>
                            <Label Grid.Row="1" Grid.Column="1" Text="Empty 2" ></Label>
                        </Grid>
                    </Border>
                </DataTemplate>
                
            </CollectionView.ItemTemplate>
            <!--<ListView.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Superman</x:String>
                    <x:String>Thor</x:String>
                    <x:String>Batman</x:String>
                    <x:String>Spiderman</x:String>
                </x:Array>
            </ListView.ItemsSource>-->

            <!--<ListView.ItemTemplate>
                <DataTemplate>
                    <Label Text="Empty" FontSize="16"></Label>
                </DataTemplate>
            </ListView.ItemTemplate>-->
        </CollectionView>
        <Grid Grid.Row="2" VerticalOptions="Center" RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="Auto,*,Auto" RowSpacing="8" ColumnSpacing="8">
            <Label TextColor="Black" VerticalOptions="Center" Text="Nombre: " ></Label>
            <Entry TextColor="Black" Grid.Column="1" x:Name="NombreEntry" ></Entry>
            <Label TextColor="Black" VerticalOptions="Center"  Text="Origen: " Grid.Row="1" ></Label>
            <Entry TextColor="Black" Grid.Column="1" Grid.Row="1" x:Name="OrigenEntry" ></Entry>
            
            <Button TextColor="Black" Grid.Column="2" Grid.Row="1" Text="Actualizar" FontAttributes="Bold" Clicked="Actualizar" ></Button>
        </Grid>
    </Grid>
</ContentPage>
