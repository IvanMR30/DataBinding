<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DataBinding.XamlElement.MainPage">

    <Grid RowDefinitions="Auto,*"
          Padding="24"
          RowSpacing="24"
          >
        
        <Grid Grid.Row="0"
              Grid.Column="0"
              ColumnDefinitions="Auto"
              ColumnSpacing="8"
            >
            <Label Grid.Row="0"
                   Grid.Column="0"
                Text="Escriba lo que piensa"
                   VerticalOptions="Center"></Label>
            <Entry Grid.Row="0" Grid.Column="1" BackgroundColor="Gray" x:Name="TextEntry" ></Entry>



        </Grid>
    <VerticalStackLayout>
            <Label Text="Esto es lo que escribiste"></Label>
            <Label  HorizontalOptions="Center"
           
            FontSize="Small"
            FontAttributes="Italic"
            Text="Aqui lo que escribiste"
            x:Name="EnteredTextLabel">
            </Label>
        </VerticalStackLayout>
        </Grid>

</ContentPage>
